pkgname=voltra
pkgver=2.0
pkgrel=1
pkgdesc='Voltra music player. Organize your own music, discover and buy new music'
arch=('i386' 'x86_64')
url='https://voltra.co'
license=('custom')
depends=()
makedepends=()
provides=('voltra')
conflicts=('voltra')
install=${pkgname}.install

source=(local://voltra.desktop)
source_i686=('https://s3.amazonaws.com/download.voltra.co/voltra32.tar.gz')
source_x86_64=('https://s3.amazonaws.com/download.voltra.co/voltra64.tar.gz')

md5sums=('b78149080a5591421561dd713cab6e8b')
md5sums_i686=('922061ae3b51f53c1d94d52674111339') 
md5sums_x86_64=('5ec489e08e730eabe004a34a89a35c90')

#pkgver() {
#  bsdtar -xf "${srcdir}/control.tar.gz"
#  grep -i "version" "${srcdir}/control" | cut -d ':' -f 2 | sed -e "s/-/_/" -e "s/\s//g"
#}

package() {

    mkdir -p "${pkgdir}"/usr/bin/
    mkdir -p "${pkgdir}"/opt/voltra.co/voltra/
    mkdir -p "${pkgdir}"/opt/voltra.co/voltra/license/

    rm ${srcdir}/version

    rsync -av --no-links "$srcdir"/ "$pkgdir"/usr/share/voltra

    install -mD 755 "$srcdir"/voltra.desktop "$pkgdir"/usr/share/applications/
    install -mD 644 "$srcdir"/resources/app/static/voltra.png "$pkgdir"/usr/share/pixmaps/

    ln -s "${pkgdir}"/opt/voltra.co/voltra/voltra "${pkgdir}/usr/bin/voltra"

    mv "${pkgdir}"/opt/voltra.co/voltra/LICENSE "${pkgdir}"/opt/voltra.co/voltra/license/
    mv "${pkgdir}"/opt/voltra.co/voltra/LICENSES.chromium.html "${pkgdir}"/opt/voltra.co/voltra/license/


}
