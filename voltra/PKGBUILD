url='https://voltra.co'
license=('custom')
depends=('desktop-file-utils')
provides=('voltra')
source=("https://s3.amazonaws.com/download.voltra.co/Voltra_${pkgver}_amd64.deb")
md5sums=('0e27745efcbb2e2b0761cc9ef60043fd')

