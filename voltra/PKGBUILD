package() {
  bsdtar -xf ${srcdir}/data.tar.xz -C ${pkgdir}/
  install -dm755 "${pkgdir}"/usr/bin
  ln -s /opt/Voltra/voltra "${pkgdir}"/usr/bin/voltra
}
