pkgname=voltra
pkgver=3.1.3
pkgrel=1
pkgdesc='Electron based material design music player'
arch=('x86_64')
url='https://voltra.co'
license=('custom')
depends=('desktop-file-utils')
install=${pkgname}.install
provides=('voltra')
source=("https://s3.amazonaws.com/download.voltra.co/Voltra_${pkgver}_amd64.deb")
md5sums=('b96cb9987b2980afc4e042b82267f0e5')

