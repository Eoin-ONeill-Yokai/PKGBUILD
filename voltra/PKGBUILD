package() {
  cd "${srcdir}"
  tar xJvf data.tar.xz
  cp -r usr opt "${pkgdir}"
  install -dm755 "${pkgdir}"/usr/bin
  ln -s /opt/Voltra/voltra "${pkgdir}"/usr/bin/voltra
}
