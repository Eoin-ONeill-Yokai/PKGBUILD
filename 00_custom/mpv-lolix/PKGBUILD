# Maintainer: Bruno Pagani <bruno.n.pagani@gmail.com>

pkgname=mpv-lolix
_pkgname=mpv
pkgver=0.27.0
pkgrel=1
_waf_version=1.9.8
pkgdesc="a free, open source, and cross-platform media player "
url="https://mpv.io"
license=('GPL')
arch=('i686' 'x86_64')
depends=('ffmpeg-lolix' 'libxss' 'libxinerama' 'libxrandr' 'libdvdread' 'libdvdnav' 'libcdio' 'libcdio-paranoia' 'libass' 'libva' 'libvdpau' 'vulkan-icd-loader')
makedepends=('mesa' 'python-docutils')
optdepends=('youtube-dl: for video-sharing websites playback')
options=('!emptydirs' '!buildflags')
provides=('mpv')
conflicts=('mpv')
source=(${pkgname}-${pkgver}.tar.gz::"https://github.com/mpv-player/${_pkgname}/archive/v${pkgver}.tar.gz"
        "http://www.freehackers.org/~tnagy/release/waf-${_waf_version}"
        '0001-opengl-backend-support-multiple-backends.patch'
        '0002-vaapi-Use-libva2-message-callbacks.patch'
        '0003-demux_lavf-return-AVERROR_EOF-on-file-end.patch')
sha256sums=('341d8bf18b75c1f78d5b681480b5b7f5c8b87d97a0d4f53a5648ede9c219a49c'
            '167dc42bab6d5bd823b798af195420319cb5c9b571e00db7d83df2a0fe1f4dbf'
            '609e0530f1b0cdb910dcffb5f62bf55936540e24105ce1b2daf1bd6291a7d58a'
            '3c3517f4f4c71e39e1e04ea440688fc8d7b3dc55e6bc0a9398d11a9b75bde07d'
            '5de6c616428c87cf9b39d8ba24446d65d175050c083e1054194d93cf03d5816a')

prepare() {
  cd ${_pkgname}-${pkgver}

  install -m755 "${srcdir}"/waf-${_waf_version} waf
  patch -Np1 -i "${srcdir}/0001-opengl-backend-support-multiple-backends.patch"
  patch -Np1 -i "${srcdir}/0002-vaapi-Use-libva2-message-callbacks.patch"
  patch -Np1 -i "${srcdir}/0003-demux_lavf-return-AVERROR_EOF-on-file-end.patch"
}

build() {
  cd ${_pkgname}-${pkgver}

  ./waf configure --prefix=/usr \
    --confdir=/etc/mpv \
    --enable-dvdread \
    --enable-encoding \
    --enable-cdda \
    --enable-dvdnav \
    --enable-libbluray \
    --enable-libass \
    --enable-libass-osd \
    --enable-libmpv-shared \
    --enable-zsh-comp \
    --enable-vdpau \
    --enable-vdpau-gl-x11 \
    --enable-vaapi \
    --enable-vaapi-x11 \
    --enable-vaapi-drm \
    --enable-vaapi-glx \
    --enable-vaapi-x-egl \
    --enable-vaapi-hwaccel \
    --enable-vdpau-hwaccel \
    --enable-alsa \
    \
    --disable-libarchive \
    --disable-oss-audio \
    --disable-jack \
    --disable-pulse \
    --disable-rubberband \
    --disable-vapoursynth \
    --disable-vapoursynth-lazy \
    --disable-rsound \
    --disable-opensles \
    --disable-xv \
    --disable-caca \
    --disable-tv \
    --disable-tv-v4l2 \
    --disable-libv4l2 \
    --disable-audio-input \
    --disable-lua \
    --disable-javascript \
    --disable-zlib \
    --disable-uchardet \
    --disable-lcms2 \
    --disable-sdl2 \
    --disable-sdl1 \
    --disable-sndio \
    --disable-openal \
    --disable-wayland \
    --disable-gl-wayland \
    --disable-coreaudio \
    --disable-audiounit \
    \
    --disable-clang-database \
    --disable-uwp \
    --disable-win32-internal-pthreads \
    --disable-wasapi \
    --disable-direct3d \
    --disable-android \
    --disable-rpi \
    --disable-ios-gl \
    --disable-mali-fbdev \
    --disable-win32

  ./waf build
}

package() {
  cd ${_pkgname}-${pkgver}

  ./waf install --destdir="${pkgdir}"

  install -m644 DOCS/{encoding.rst,tech-overview.txt} "${pkgdir}"/usr/share/doc/mpv
}
