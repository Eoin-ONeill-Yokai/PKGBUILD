
pkgname=twin-git
_gitname="twin"
pkgver=r171.d815403
pkgrel=1
pkgdesc="A text-mode window environment"
arch=('i686' 'x86_64')
url='http://sourceforge.net/projects/twin/'
license=('GPL2' 'LGPL2.1')
depends=('gpm' 'libxpm')
options=('!makeflags')
source=("git+https://github.com/cosmos72/twin")
md5sums=('SKIP')

pkgver() {
  cd "$_gitname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir"/$_gitname
  LDFLAGS="-lX11" ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
	--enable-tt=yes \
	--enable-tt-hw-twin=yes \
    --enable-tt-hw-twin-tunnel=yes \
    --enable-tt-hw-twin-detunnel=yes \
	--enable-tt-hw-xml=yes
  make -j 8
}

package() {
  cd "$srcdir"/$_gitname
  make DESTDIR="$pkgdir" install
}
