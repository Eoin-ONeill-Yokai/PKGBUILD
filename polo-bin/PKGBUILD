
pkgname=polo
pkgver=17.5
pkgrel=1
_betaver=5
pkgdesc="Polo file manager"
arch=('i686' 'x86_64')
url="http://www.teejeetech.in/"
#license=()
depends=('gtk3' 'libgee')
provides=('polo')
conflicts=('polo')
source_i686=("local://polo-beta-"${_betaver}"-i386.deb") 
source_x86_64=("local://polo-beta-"${_betaver}"-amd64.deb") 
md5sums_i686=('5db1745d40b5a71ad739632b46018e5b')
md5sums_x86_64=('b70ab5fdcdc30ee5e7809dff3f5af796')
#options=(emptydirs)
prepare() {
  cd "${srcdir}"
  tar xzf control.tar.gz
}

pkgver() {
  grep -i "Version" "${srcdir}"/control | cut -d ' ' -f 2
}

package() {
if [[ "${CARCH}" = 'i686' ]]; then
        bsdtar -xf $pkgname-beta-"$_betaver"-i386.deb
    fi
if [[ "${CARCH}" = 'x86_64' ]]; then
        bsdtar -xf $pkgname-beta-"$_betaver"-amd64.deb
    fi
  bsdtar -xf "${srcdir}/data.tar.xz" -C "${pkgdir}/"
  install -d $pkgdir/usr/bin
  ln -s /usr/bin/polo-gtk $pkgdir/usr/bin/polo
  rm $pkgdir/usr/bin/polo-uninstall
}
