# Contributor: Maximilian Kindshofer <maximilian@kindshofer.net>

pkgname=kitty
pkgver=0.3.0
pkgrel=1
pkgdesc="A modern, hackable, featureful, OpenGL based terminal emulator"
arch=('i686' 'x86_64')
url="https://github.com/kovidgoyal/kitty"
license=('GPL3')
depends=('python3' 'glew' 'glfw-x11' 'freetype2' 'xorg-xdpyinfo' 'xsel' 'fontconfig')
makedepends=('git' 'pkg-config' 'python-setuptools')
source=("https://github.com/kovidgoyal/$pkgname/archive/v$pkgver.tar.gz")
md5sums=('41c944a49f3812ef890c7dd2eb5aef6c')

build() {
	cd "$srcdir/$pkgname-$pkgver"
        python3 setup.py linux-package
    }

package() {
    cd "$srcdir/$pkgname-$pkgver/linux-package"
    install -d $pkgdir/usr/bin/
    install -d $pkgdir/usr/lib/
    install -d $pkgdir/usr/share
    cp -r bin/* $pkgdir/usr/bin
    cp -r share/* $pkgdir/usr/share/
    cp -r lib/* $pkgdir/usr/lib/
    }
