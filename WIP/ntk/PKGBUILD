# Maintainer: Lieven Moors <lievenmoors@gmail.com>
# Contributor: Michael Ivko <ivko.mv@gmail.com>

pkgname=ntk
_pkgname=fltk
pkgver=1.3.1000
pkgrel=1
pkgdesc="Fork of FLTK 1.3.0 with additional functionality."
arch=('i686' 'x86_64')
url="http://non.tuxfamily.org/"
license=('custom:LGPL')
depends=('libxft' 'cairo' 'libjpeg')
makedepends=('python')
provides=('ntk')
conflicts=('ntk')
source=("https://git.tuxfamily.org/non/fltk.git/snapshot/fltk-${pkgver}.tar.gz")
md5sums=('2e6f4c8f97c379b112fdffd4522e6504')

build() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  ./waf configure --prefix=/usr
  ./waf
}

package() {
  cd "${srcdir}/${_pkgname}-${pkgver}"
  ./waf --destdir="$pkgdir" install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
