pkgname=mdbook-bin
pkgver=0.2.1
pkgrel=1
pkgdesc="Create book from markdown files, like Gitbook but implemented in Rust"
url="https://github.com/rust-lang-nursery/mdBook"
arch=(x86_64 i686)
license=(MPL2)
provides=(mdbook)
conflicts=(mdbook)
