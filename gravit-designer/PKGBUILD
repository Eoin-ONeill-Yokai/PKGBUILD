
pkgname=gravit-designer
pkgver=3.1
pkgrel=1
pkgdesc="Burn images to SD cards & USB drives, safe & easy"
arch=('x86_64')
url="https://designer.io/"
license=('custom')
depends=('gtk2' 'dbus' 'libxi' 'libxcursor' 'libxdamage' 'libxrandr'
	 'libxcomposite' 'libxext' 'libxfixes' 'libxrender' 'libxtst'
	 'gconf' 'glib2' 'nss' 'xz' 'fuse2')
optdepends=('libnotify: for notifications'
            'speech-dispatcher: for text-to-speech')
source=("https://app.designer.io/_downloads/linux/GravitDesigner.zip"
        'gravit-designer.desktop')
#options=("!strip")
md5sums=('8cb9419d14052d45f08767377cf40f4b'
         '5df15d346d4ae9c725ea4e2f858229cf')
PKGEXT='.pkg.tar'

package() {
  bsdtar -xf GravitDesigner.AppImage -C ${pkgdir}/

  install -d ${pkgdir}/usr/share/applications
  install -D ${srcdir}/gravit-designer.desktop ${pkgdir}/usr/share/applications/gravit-designer.desktop

  rm ${pkgdir}/AppRun
  rm ${pkgdir}/gravit-designer.desktop
}
