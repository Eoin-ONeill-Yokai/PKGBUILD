# Maintainer: Daniel Maslowski <info@orangecms.org>

_gitname=upplay
pkgname=${_gitname}-git_fix
pkgver=UPPLAY_0.8.5.r338.g32ac391
pkgrel=1
pkgdesc="A Qt-based UPnP audio Control point"
url="http://www.lesbonscomptes.com/upplay/"
arch=('x86_64')
license=('GPL2')
provides=('upplay')
conflicts=('upplay' 'upplay-git')
depends=('libupnpp>=0.15.0'
         'qt5-webkit'
         'hicolor-icon-theme')
makedepends=('qt5-script')
source=("git+https://github.com/medoc92/upplay.git")
md5sums=('SKIP')
         
pkgver() {
  cd "${srcdir}/${_gitname}"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

build(){
	cd "${srcdir}/${_gitname}"
    qmake -o Makefile upplay.pro PREFIX=/usr
}

package(){
	cd "${srcdir}/${_gitname}"
	make install INSTALL_ROOT="${pkgdir}"
}
