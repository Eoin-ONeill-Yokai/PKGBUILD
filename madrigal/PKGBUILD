# Maintainer: FabioLolix https://github.com/FabioLolix

pkgname=madrigal
pkgver=0.0.1
pkgrel=1
pkgdesc="Madrigal is a Qt5 OpenHome Control Point, currently still in development"
arch=('i686' 'x86_64')
url="https://github.com/CDrummond/madrigal"
license=('GPLv3')
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=('madrigal')
#install=
#changelog=

source=("git+https://github.com/CDrummond/madrigal")

md5sums=('SKIP')

package() {

	mkdir $srcdir/$pkgname/build

	cd $srcdir/$pkgname/build

	cmake .. -DCMAKE_BUILD_TYPE=Release

	make

	make DESTDIR=$pkgdir install

}
