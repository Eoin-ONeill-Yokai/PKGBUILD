pkgname=playbluray
pkgver=1.2
pkgrel=1
pkgdesc="Cross-Platform Blu-ray Playback Script"
arch=('i686' 'x86_64')
url="http://www.jaegertech.com/software/cross-platform-blu-ray-playback"
license=('unknown open source license')
depends=('makemkv' 'vlc' 'curl')
source=('playBluRay.sh'
        'playBluRay-icon.png')
sha256sums=('769cdd57cbf1f03adbc2c5bf9b8feb0ad11656b4f20394b2431001c4f913bff6'
            '2d09d8947104426f13878857467b196eb8e9b6894bd345a8e60265fb72332e70')

package() {
   install -Dm644 "$srcdir/playBluRay.sh" "$pkgdir/usr/bin/playbluray"
   install -Dm644 "$srcdir/playBluRay-icon.png" "$pkgdir/usr/share/pixmaps/playbluray-icon.png"
   chmod +x "$pkgdir/usr/bin/playbluray"
}
